<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/newsItemBackgroundColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="_news fragment"
                android:textAlignment="center">

            </TextView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                card_view:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/news_feed_picture"
                    android:layout_width="330dp"
                    android:layout_height="220dp" />
                <ImageView
                    android:id="@+id/news_feed_video_available"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/video_available_icon"
                    android:layout_gravity="bottom|right"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    />
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/news_feed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="_feed text"
                android:textAlignment="center"></TextView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>