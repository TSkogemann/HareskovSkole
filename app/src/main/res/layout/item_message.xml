<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/message_item_self"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/message_item_chatbubble_self_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="_test" />

                <TextView
                    android:id="@+id/message_item_date_self_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_sendt xx-yy-zzzz"
                    android:textAlignment="center"
                    android:textSize="8dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_item_other"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/message_item_chatbubble_other_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/message_item_date_other_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_sendt xx-yy-zzzz"
                    android:textAlignment="center"
                    android:textSize="8dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>