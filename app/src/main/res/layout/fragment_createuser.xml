<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_primary_to_primary_dark"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        android:textSize="36dp"
        android:textColor="@color/colorAccent"
        android:text="_Opret bruger" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="48dp"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="_jeg er"
            android:textSize="18dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/userType"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_school_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="48dp"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:gravity="center"
            android:text="_vælg Skole"
            android:textSize="18dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/school"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_SchoolClass_LL"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="48dp"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="_Vælg klasse"
            android:textSize="18dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/school_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="18dp"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        android:text="_Indtast bruger info her" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--  create user first name -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_first_name_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_first_name_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_first name" />
            </android.support.design.widget.TextInputLayout>
            <!--  create user last name -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_last_name_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_last_name_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_last name" />
            </android.support.design.widget.TextInputLayout>

            <!-- login password -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_password_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_password_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_password" />
            </android.support.design.widget.TextInputLayout>

            <!-- create user confirm password password -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_confirm_password_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_confirm_password_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_type in password again" />
            </android.support.design.widget.TextInputLayout>

            <!-- login email -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_email_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_login_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_email"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <!-- login confirm email -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_confirm_email_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_login_email_confirm_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_type in email again"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <!--  create user authcode -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_auth_code_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_auth_code_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_auth code" />
            </android.support.design.widget.TextInputLayout>

            <!--  create user authcode validation -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_user_auth_code_validation_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/create_user_auth_code_validation_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="_validation auth code" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/create_user_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_Forsæt" />


</LinearLayout>